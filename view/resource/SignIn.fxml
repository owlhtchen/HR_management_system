<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="371.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignInController">
   <children>
      <TextField fx:id="usernameField" layoutX="92.0" layoutY="113.0" prefHeight="25.0" prefWidth="187.0" promptText="username" />
      <PasswordField fx:id="passwordField" layoutX="92.0" layoutY="174.0" prefHeight="25.0" prefWidth="187.0" promptText="password" />
       <Button layoutX="105.0" layoutY="246.0" mnemonicParsing="false" onAction="#checkSignInInfo" text="Sign In" />
       <Button layoutX="201.0" layoutY="246.0" mnemonicParsing="false" onAction="#changeToSignUp" text="Sign Up" />
      <Label fx:id="signInLabel" layoutX="123.0" layoutY="214.0" onInputMethodTextChanged="#changeLabelText" />
      <Label layoutX="124.0" layoutY="54.0" text="Welcome!" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="time" layoutX="153.0" layoutY="287.0" prefHeight="35.0" prefWidth="106.0" />
      <Button fx:id="setTime" layoutX="230.0" layoutY="337.0" mnemonicParsing="false" onAction="#setTime" text="reset time" />
      <TextField fx:id="timeField" layoutX="57.0" layoutY="337.0" promptText="mm/dd/yyyy" />
      <Text layoutX="105.0" layoutY="310.0" strokeType="OUTSIDE" strokeWidth="0.0" text="time:" />
   </children>
</AnchorPane>
